@model SportSystem.Web.ViewModels.MatchDetailsViewModel
@{
    ViewBag.Title = "MatchDetailsViewModel";
}
<div>
    Home: @Html.DisplayFor(x => x.HomeTeamTeamName)
    Away: @Html.DisplayFor(x => x.AwayTeamTeamName)
    <p>Date: @Html.DisplayFor(x => x.DateTimeMatch);
    </p>
</div>

<div id="comments">
    <h2>Comments</h2>
    @if (Model.Comments.Any())
    {
        @Html.DisplayFor(x => x.Comments)
    }
    else
    {
        <p>No comments</p>
    }
</div>
<div>
    @using (Ajax.BeginForm("Add", "Comments", new { BookmarkId = Model.Id }, new AjaxOptions()
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.InsertAfter,
        UpdateTargetId = "comments",

    }))
    {
        @Html.AntiForgeryToken()
        <label for="Content">Content</label>
        <input id="Content" type="text" name="Content" value="" />

        <input type="submit" name="submit" value="Add comment" />
    }
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}


