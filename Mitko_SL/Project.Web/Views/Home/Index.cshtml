@model IEnumerable<Project.Web.BlogEntryShortViewModel>
@{
    ViewBag.Title = "Home Page";
    ViewBag.SubTitle = "Блог";
}

<div class="row">
    <div class="col-md-3">
        <h3>@ViewBag.SubTitle</h3>
        @foreach (var item in Model)
